.container.breadcrumbs
  =link_to "Home", root_path
  %span.arrow >
  =link_to "Services", services_path
  %span.arrow >
  =@service.name
  service

.container.white_bg#service_show
  %h1= @service.name

  %p.bold Steps
  %p= @service.steps

  %p.bold Patterns
  #pattern_links
    - @service.patterns.each do |pattern|
      = link_to pattern.name, pattern_path(pattern.slug), class: "single_pattern #{pattern.name.parameterize}", title: "View services under the #{pattern.name} pattern"

  - if @service.life_events.any?
    %p.bold Life events
    %p.hint
      Life events are taken from a provisional list that
      = link_to "builds on this LGA example.", "https://standards.esd.org.uk/?uri=list%2FlifeEvents", target: '_blank'
    - @service.life_events.each do |life_event|
      .single_pattern.not_pattern.large_pattern
        = life_event.name

  %p.bold Organisation type
  - @service.organisation_types.each do |org_type|
    = org_type

  %p.bold Transactional
  %p
    - if @service.transactional
      Yes, this service is transactional
    - else
      No, this is a non transactional service


.container.full_container
  = link_to "Add a new service", new_service_path, class: 'button right'
